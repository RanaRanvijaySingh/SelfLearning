<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAttachObserver"
        style="@style/buttonDefaultMW"
        android:text="@string/btn_attach_observer"/>

    <Button
        android:id="@+id/btnDetachObserver"
        style="@style/buttonDefaultMW"
        android:text="@string/btn_detach_observer"/>

    <Button
        android:id="@+id/btnUsingOperatorsExample"
        style="@style/buttonDefaultMW"
        android:text="@string/btn_using_operators"/>

    <Button
        android:id="@+id/btnAsynchronousExample"
        style="@style/buttonDefaultMW"
        android:text="@string/btn_asynchronous"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>