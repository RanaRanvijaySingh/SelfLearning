<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.selflearning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".materialdesigndemo.MaterialDesignDemoActivity"/>
        <activity android:name=".loaderdemo.LoaderDemoActivity"/>
        <activity android:name=".toolbardemo.ToolbarDemoActivity"/>
        <activity android:name=".expandablerecyclerviewdemo.ExpandableRvDemoActivity"/>
        <activity android:name=".customnotification.CustomNotificationDemo"/>
        <activity android:name=".imagerotation.RotateImageDemo"/>

        <receiver android:name=".customnotification.ButtonClickReceiver">
            <intent-filter>
                <action android:name="button_click"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>