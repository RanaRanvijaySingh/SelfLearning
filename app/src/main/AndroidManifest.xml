<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.selflearning">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".materialdesigndemo.MaterialDesignDemoActivity"/>
        <activity android:name=".loaderdemo.LoaderDemoActivity"/>
        <activity android:name=".toolbardemo.ToolbarDemoActivity"/>
        <activity android:name=".expandablerecyclerviewdemo.ExpandableRvDemoActivity"/>
        <activity android:name=".customnotification.CustomNotificationDemoActivity"/>
        <activity android:name=".circularseekbardemo.RotateImageDemoActivity"/>
        <activity android:name=".filedemo.FileDemoActivity"/>
        <activity android:name=".databaseupgradedemo.DatabaseUpgradeDemoActivity"/>
        <activity android:name=".rotateviewdemo.RotateViewDemoActivity"/>
        <activity android:name=".rxandroiddemo.RxAndroidDemoActivity"/>
        <activity android:name=".observerpattern.ObserverPatternDemoActivity"/>
        <activity android:name=".swipelayoutdemo.SwipeDemoActivity"/>
        <activity android:name=".localizationdemo.LocalizationDemoActivity"/>
        <activity android:name=".pulltorefresh.PullToRefreshDemoActivity"/>
        <activity android:name=".customfabdemo.CustomFABDemoActivity"/>
        <activity android:name=".advancefabdemo.AdvanceFABDemoActivity"/>
        <activity android:name=".twodimensionfabdemo.TwoDimensionFABDemoActivity"/>
        <activity android:name=".scaleanimation.ScaleAnimationDemoActivity"/>
        <activity android:name=".boayzswipelibdemo.BoayzSwipeLibDemoActivity"/>
        <activity android:name=".swiftperfectdemo.SwiftPerfectDemoActivity"/>
        <activity android:name=".youtubedemo.YouTubeDemoActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <receiver android:name=".customnotification.ButtonClickReceiver">
            <intent-filter>
                <action android:name="button_click"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>